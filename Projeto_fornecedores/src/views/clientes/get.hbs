<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Visualizar Cliente</title>
</head>

<body>
  <div class="container">
    <h1>Visualizar Cliente</h1>

    <!-- Informações do Cliente -->
    <div class="form-group">
      <label for="nome">Nome</label>
      <span id="nome">{{loja.nome}}</span>
    </div>

    <div class="form-group">
      <label for="contato">Contato</label>
      <span id="contato">{{loja.contato}}</span>
    </div>

    <div class="form-group">
      <label for="filial">Filial</label>
      <span id="filial">{{loja.filial}}</span>
    </div>

    <!-- Seção de Fornecedores -->
    <div id="pedidos-section">
      <h2>Fornecedores</h2>
      <div id="fornecedores">
        {{#if fornecedores.length}}
        {{#each fornecedores}}
        <div class="fornecedor">
          <label for="fornecedor-{{@index}}">Nome:</label>
          <span id="fornecedor-{{@index}}">{{this.nome}}</span>

          <!-- Pedidos dos fornecedores -->
          <div id="pedidos"> <!-- Added Flexbox container here -->
            {{#each this.pedidos}}
            <div class="pedido">
              <label for="produto-{{@index}}">Produto</label>
              <span id="produto-{{@index}}">
                {{#if this.produto}}
                {{this.produto.nome}}
                {{else}}
                Produto não disponível
                {{/if}}
              </span>

              <label for="preco-{{@index}}">Preço</label>
              <span id="preco-{{@index}}">
                {{#if this.produto}}
                R${{this.produto.preco}} 
                {{else}}
                Preço não disponível
                {{/if}}
              </span>

              <label for="quantidade-{{@index}}">Quantidade</label>
              <span id="quantidade-{{@index}}">
                {{#if this.quantidade}}
                {{this.quantidade}} 
                {{else}}
                Quantidade não disponível
                {{/if}}
              </span>
            </div>
            {{/each}}
          </div> <!-- Close Flexbox container -->
        </div>
        {{/each}}
        {{else}}
        <p>Este cliente não possui fornecedores cadastrados.</p>
        {{/if}}
      </div>
    </div>

    <!-- Botões -->
    <button class="gerar-pdf" onclick="window.location.href = '/Home/clientes/pdf/{{cliente._id}}';">Visualizar PDF</button>
    <button class="back-button" onclick="window.location.href = '/Home/clientes';">Voltar</button>

    <!-- Link de voltar -->
    <a href="/Home/clientes" class="back-link">Voltar para lista de clientes</a> <!-- Ensure this link has a class if styled -->
  </div>
</body>

</html>