<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Visualizar Cliente</title>
</head>

<body>
  <div class="main-container">
    <!-- Lado esquerdo (Pedidos) -->
    <div class="left-side">
      <h2>Fornecedores</h2>
      <div id="fornecedores">
        {{#if fornecedores.length}}
        {{#each fornecedores}}
        <div class="fornecedor">
          <label for="fornecedor-{{@index}}">Nome:</label>
          <span id="fornecedor-{{@index}}">{{this.nome}}</span>

          <!-- Pedidos dos fornecedores -->
          <div id="pedidos" class="pedidos-container"> <!-- Adicionando o contêiner Flexbox -->
            {{#each this.pedidos}}
            <div class="pedido">
              <div class="pedido-item">
                <label for="produto-{{@index}}">Produto:</label>
                <span id="produto-{{@index}}">
                  {{#if this.produto}}
                  {{this.produto.nome}}
                  {{else}}
                  Produto não disponível
                  {{/if}}
                </span>
              </div>

              <div class="pedido-item">
                <label for="preco-{{@index}}">Preço:</label>
                <span id="preco-{{@index}}">
                  {{#if this.produto}}
                  R${{this.produto.preco}} 
                  {{else}}
                  Preço não disponível
                  {{/if}}
                </span>
              </div>

              <div class="pedido-item">
                <label for="quantidade-{{@index}}">Quantidade:</label>
                <span id="quantidade-{{@index}}">
                  {{#if this.quantidade}}
                  {{this.quantidade}} 
                  {{else}}
                  Quantidade não disponível
                  {{/if}}
                </span>
              </div>
            </div>
            {{/each}}
          </div> <!-- Fechando o contêiner Flexbox -->
        </div>
        {{/each}}
        {{else}}
        <p>Este cliente não possui fornecedores cadastrados.</p>
        {{/if}}
      </div>
    </div>

    <!-- Lado direito (Informações do Cliente) -->
    <div class="right-side">
      <h1>Visualizar Cliente</h1>

      <!-- Informações do Cliente -->
      <div class="form-group">
        <label for="nome">Nome:</label>
        <span id="nome">{{loja.nome}}</span>
      </div>

      <div class="form-group">
        <label for="contato">Contato:</label>
        <span id="contato">{{loja.contato}}</span>
      </div>

      <div class="form-group">
        <label for="filial">Filial:</label>
        <span id="filial">{{loja.filial}}</span>
      </div>

      <!-- Botões -->
      <div class="form-actions">
        <a href="/Home/clientes" class="button-back">Voltar</a>
        <a href="/Home/clientes/pdf/{{loja._id}}" class="button-submit">Visualizar PDF</a>
      </div>
    </div>
  </div>
</body>

</html>
