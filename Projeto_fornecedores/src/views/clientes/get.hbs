    <div id="fornecedores-section">
      <h2>Fornecedores</h2>
      <div id="fornecedores">
        {{#if fornecedores.length}}
        {{#each fornecedores}}
        <div class="fornecedor">
          <label for="fornecedor-{{@index}}">Nome:</label>
          <span id="fornecedor-{{@index}}">{{this.nome}}</span>
          {{#each fornecedores.pedidos}}
          <label for="fornecedor-{{@index}}">Pedidos</label>
          <span>{{this.produto.nome}}</span>
          {{/each}}
        </div>
        {{/each}}
        {{else}}
        <p>Este cliente não possui fornecedores cadastrados.</p>
        {{/if}}
